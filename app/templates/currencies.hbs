<style>
[data-sort=table] > tbody > tr:hover{
  background-color: #159c6e;
  cursor: pointer;
}
</style>
<div class="col-sm-12" style="padding-top: 10px;">
  <h2><strong>Currencies</strong></h2>
  <div id="newButtonDiv" class="text-right" style="padding-bottom:10px;">
    <div style="padding-bottom: 10px;">
      <button type="button" name="newCurrency" class="btn btn-lg btn-success-outline" >
        <strong>New Currency</strong>
      </button>
    </div>
    <div style="padding-bottom: 10px;">
      <button type="button" name="addCurrency" class="btn btn-lg btn-success-outline" >
        <strong>Add Existing Currency</strong>
      </button>
    </div>
    <div style="padding-bottom: 10px;">
      <button type="button" name="csvcurrencies" class="btn btn-lg btn-primary-outline" >
        <strong>Export Ledger CSV</strong>
      </button>
    </div>
  </div>
  <div class="table-full">
    <table class="table currencies" data-sort="table">
      <thead>
        <tr>
          <th>Currency</th>
          <th>Stewards</th>
        </tr>
      </thead>
      <tbody class="table-rows">
        {{#each currencies}}
          {{#this}}
          <tr id="{{id}}">
            <td>{{currencyName}}</td>
            <td>{{#each stewards}}{{#this}}<a href='#stewards/{{stewardname}}'>{{stewardname}}</a> {{/this}}{{/each}}</td>
          </tr>
          {{/this}}
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
